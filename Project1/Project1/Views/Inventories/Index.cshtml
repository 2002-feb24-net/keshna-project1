@model IEnumerable<DataAccess.Entities.Inventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Inventory</h1>

<p>
    <a asp-action="Create"  class="btn  btn-outline-success btn-sm">Create New</a>
</p>
<table  class="table table-hover table-dark">
    <thead>
        <tr>
            <th class="col">
                @Html.DisplayNameFor(model => model.InventoryAmount)
            </th>
            <th class="col">
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th class="col">
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th class="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="col">
                @Html.DisplayFor(modelItem => item.InventoryAmount)
            </td>
            <td class="col">
                @Html.DisplayFor(modelItem => item.Location.City)
            </td>
            <td class="col">
                @Html.DisplayFor(modelItem => item.Product.Pname)
            </td>
            <td class="col">
                <a asp-action="Edit" asp-route-id="@item.InventoryId" class="btn  btn-outline-success btn-sm">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.InventoryId" class="btn  btn-outline-success btn-sm">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.InventoryId" class="btn  btn-outline-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
